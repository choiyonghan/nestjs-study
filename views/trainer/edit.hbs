<div class="max-w-2xl mx-auto bg-white">
    <div class="flex items-center justify-center">
        <!-- Author: FormBold Team -->
        <!-- Learn More: https://formbold.com -->
        <div class="mx-auto w-full max-w-[550px]">
            <form method="post" action="/trainer/{{trainer.id}}?_method=PUT">
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="adminId"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                아이디
                            </label>
                            <input
                                    type="text"
                                    name="adminId"
                                    id="adminId"
                                    value="{{ trainer.adminId }}"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="adminName"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                이름
                            </label>
                            <input
                                    type="text"
                                    name="adminName"
                                    id="adminName"
                                    value="{{ trainer.adminName }}"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                </div>
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="joinDate"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                입사일자
                            </label>
                            <input
                                    type="date"
                                    name="joinDate"
                                    id="joinDate"
                                    value="{{ trainer.joinDateToString }}"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="phone"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                핸드폰 번호
                            </label>
                            <input
                                    type="number"
                                    name="phone"
                                    id="phone"
                                    value="{{ trainer.phone }}"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                </div>
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="height"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                키
                            </label>
                            <input
                                    type="number"
                                    name="height"
                                    id="height"
                                    value="{{ trainer.height }}"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="weight"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                몸무게
                            </label>
                            <input
                                    type="number"
                                    name="weight"
                                    id="weight"
                                    value="{{ trainer.weight }}"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                        성별
                    </label>
                    <div class="flex items-center space-x-6">
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="gender"
                                    id="radioButton1"
                                    value="M"
                                    {{#ifCond trainer.gender 'M' }}
                                        checked="checked"
                                    {{/ifCond}}
                                    class="h-5 w-5"
                            />
                            <label
                                    for="radioButton1"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                남성
                            </label>
                        </div>
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="gender"
                                    id="radioButton2"
                                    value="F"
                                    {{#ifCond trainer.gender 'F' }}
                                        checked="checked"
                                    {{/ifCond}}
                                    class="h-5 w-5"
                            />
                            <label
                                    for="radioButton2"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                여성
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                        사용여부
                    </label>
                    <div class="flex items-center space-x-6">
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="useYn"
                                    id="useYn1"
                                    value="Y"
                                    {{#ifCond trainer.useYn 'Y' }}
                                        checked="checked"
                                    {{/ifCond}}
                                    class="h-5 w-5"
                            />
                            <label
                                    for="useYn1"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                예
                            </label>
                        </div>
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="useYn"
                                    id="useYn2"
                                    value="N"
                                    {{#ifCond trainer.useYn 'N' }}
                                        checked="checked"
                                    {{/ifCond}}
                                    class="h-5 w-5"
                            />
                            <label
                                    for="useYn2"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                아니오
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    <button
                            class="hover:shadow-form rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none"
                    >
                        저장
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>