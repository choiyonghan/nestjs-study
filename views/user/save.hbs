<div class="max-w-2xl mx-auto bg-white">
    <div class="flex items-center justify-center p-12">
        <!-- Author: FormBold Team -->
        <!-- Learn More: https://formbold.com -->
        <div class="mx-auto w-full max-w-[550px]">
            <form action="/user" method="POST">
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="fName"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                성
                            </label>
                            <input
                                    type="text"
                                    name="firstName"
                                    id="fName"
                                    placeholder="홍"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="lName"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                이름
                            </label>
                            <input
                                    type="text"
                                    name="lastName"
                                    id="lName"
                                    placeholder="길동"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                </div>
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="birthday"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                생일
                            </label>
                            <input
                                    type="date"
                                    name="birthday"
                                    id="birthday"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="phone"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                핸드폰 번호
                            </label>
                            <input
                                    type="number"
                                    name="phone"
                                    id="phone"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                </div>
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="height"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                키
                            </label>
                            <input
                                    type="number"
                                    name="height"
                                    id="height"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="weight"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                몸무게
                            </label>
                            <input
                                    type="number"
                                    name="weight"
                                    id="weight"
                                    min="0"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            />
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                    for="adminId"
                                    class="mb-3 block text-base font-medium text-[#07074D]"
                            >
                                담당 트레이너
                            </label>
                            <select
                                    name="adminId"
                                    id="adminId"
                                    class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                            >
                                <option class="px-3" value="">선택해주세요.</option>
                                {{#each trainers}}
                                    <option class="px-3" value="{{ adminId }}">{{ adminName }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <label
                            for="address"
                            class="mb-3 block text-base font-medium text-[#07074D]"
                    >
                        주소
                    </label>
                    <input
                            type="text"
                            name="address"
                            id="address"
                            class="w-full appearance-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"
                    />
                </div>
                <div class="mb-5">
                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                        성별
                    </label>
                    <div class="flex items-center space-x-6">
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="gender"
                                    id="radioButton1"
                                    value="M"
                                    class="h-5 w-5"
                            />
                            <label
                                    for="radioButton1"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                남성
                            </label>
                        </div>
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="gender"
                                    id="radioButton2"
                                    value="F"
                                    class="h-5 w-5"
                            />
                            <label
                                    for="radioButton2"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                여성
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                        사용여부
                    </label>
                    <div class="flex items-center space-x-6">
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="useYn"
                                    id="useYn1"
                                    value="Y"
                                    class="h-5 w-5"
                            />
                            <label
                                    for="useYn1"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                예
                            </label>
                        </div>
                        <div class="flex items-center">
                            <input
                                    type="radio"
                                    name="useYn"
                                    id="useYn2"
                                    value="N"
                                    class="h-5 w-5"
                            />
                            <label
                                    for="useYn2"
                                    class="pl-3 text-base font-medium text-[#07074D]"
                            >
                                아니오
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    <button
                            class="hover:shadow-form rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none"
                    >
                        저장
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>